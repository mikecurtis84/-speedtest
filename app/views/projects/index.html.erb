<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Urls</th>
      <th>Schedule</th>
      <th>Startdate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><ul><% project.urls.each_line do |url| %>
          <li><%= url %></li>
          <% end %>
          </ul>
        </td>
        <td><%= project.schedule %></td>
        <td><%= project.startdate %></td>
        <td><b><%= link_to "Viewall", controller: "pagesummary", action: "allpages", id: project.id %></b></td>
        <td><%= link_to 'Delete Project', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path %>
