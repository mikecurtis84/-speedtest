<%= form_for(project) do |f| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :urls %>
    <%= f.text_area :urls %>
  </div>

  <div class="field">
    <%= f.label :schedule %>
    <%= f.select :schedule, options_for_select(["Daily", "Weekly", "Monthly", "One-Off"]) %>
  </div>

  <div class="field">
    <%= f.label :startdate %>
    <%= f.datetime_select :startdate %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
